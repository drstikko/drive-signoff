<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stephan.drivesign_off.ds.DSAddAssignmentActivity">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/init_assignment_name"
        android:hint="Default Assignment Name"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_assignment_confirm_title"
        android:id="@+id/button"
        android:onClick="onAddAssignmentConfirmClicked"
        android:layout_below="@+id/add_number_weeks"
        android:layout_alignRight="@+id/add_number_weeks"
        android:layout_alignEnd="@+id/add_number_weeks" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_number_weeks"
        android:hint="Number Of Weeks"
        android:inputType="number"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_number_assignments"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_number_assignments"
        android:hint="Number Of Assignments"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/init_assignment_name"
        android:layout_alignParentLeft="true"
        android:inputType="number" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fill in the fields below:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
